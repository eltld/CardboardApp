<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unibg.p3d4amb.stereoacuitytest.ShapeSetting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Shapes settings"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Circle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="15dp"
                android:text="Radius"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextRadius"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignParentRight="true"
                android:digits="0123456789"
                android:gravity="center"
                android:maxLines="1"
                android:numeric="integer"
                android:textSize="20dp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextRadius"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Rectangle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="15dp"
                android:text="Base"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextBaseRect"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignRight="@+id/editTextRadius"
                android:digits="0123456789"
                android:gravity="center"
                android:maxLines="1"
                android:numeric="integer"
                android:textSize="20dp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/editTextBaseRect"
                android:layout_marginTop="15dp"
                android:text="Height"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextHeightRect"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignParentRight="true"
                android:digits="0123456789"
                android:gravity="center"
                android:maxLines="1"
                android:numeric="integer"
                android:textSize="20dp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextHeightRect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Square"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="15dp"
                android:text="Side"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextSideSquare"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignParentRight="true"
                android:digits="0123456789"
                android:gravity="center"
                android:maxLines="1"
                android:numeric="integer"
                android:textSize="20dp"
                android:inputType="number"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextSideSquare"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Triangle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="15dp"
                android:text="Base"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="15dp"
                android:text="Height"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTextBaseTri"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignRight="@+id/editTextSideSquare"
                android:digits="0123456789"
                android:gravity="center"
                android:maxLines="1"
                android:numeric="integer"
                android:textSize="20dp"
                android:inputType="number"/>

            <EditText
                android:id="@+id/editTextHeightTri"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignRight="@+id/editTextBaseTri"
                android:digits="0123456789"
                android:gravity="center"
                android:maxLines="1"
                android:numeric="integer"
                android:textSize="20dp"
                android:inputType="number"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
