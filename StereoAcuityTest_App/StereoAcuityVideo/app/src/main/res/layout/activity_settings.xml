<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unibg.p3d4amb.stereoacuityvideo.Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText_ReductionH"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView_PointDensity"
                android:layout_centerHorizontal="true"
                android:digits="0123456789."
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editText_ReductionW"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textView_PointDimension"
                android:layout_centerHorizontal="true"
                android:digits="0123456789."
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView_PointDensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_ReductionW"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:text="Insert pixel reduction height"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_PointDimension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:text="Insert pixel reduction width"
                android:textSize="20dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
